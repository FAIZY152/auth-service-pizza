{
  "compilerOptions": {
    "lib": ["es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": false
  },
 "include": [
    "src/**/*",
    "eslint.config.mjs"
  ],
  "exclude": ["node_modules" ,"**/*.spec.ts"]
}
